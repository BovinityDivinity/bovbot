    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>
<body>
    <div id="wrapper">
        <!-- Navigation -->
        <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="http://www.bovinitydivinity.com/raffle">ELC Raffle Home</a>
            </div>
            <!-- Top Menu Items -->
            <ul class="nav navbar-right top-nav">                
            </ul>
            <!-- Sidebar Menu Items - These collapse to the responsive navigation menu on small screens -->
				<div class="collapse navbar-collapse navbar-ex1-collapse">
                <ul class="nav navbar-nav side-nav">
                    <li>
                        <a href="/raffle"><i class="fa fa-fw fa-dashboard"></i>Home</a>
                    </li>
                    <li>
                        <a href="/rafflestats"><i class="fa fa-fw fa-edit"></i> Statistics</a>
                    </li>   
                    <li>
                        <a href="/rafflewinner"><i class="fa fa-fw fa-edit"></i>Winner Selection</a>
                    </li>                  
                </ul>
            </div>                    
            <!-- /.navbar-collapse -->
        </nav>
        <div id="page-wrapper">
            <div class="container-fluid">
                <!-- Page Heading -->
                <div class="row">
                    <div class="col-lg-12">
                        <h1 class="page-header">Raffle Winner Selection</h1>                      
                        <div class="contentDiv">
                            <div class="viewerDiv">
                                <center>                                    
									<h1>Enter Date Range for Winner Selection (yyyy/mm/dd)</h1>
									<form>
										Start Date: <input type="date" id='startDate'>
										End Date: <input type='date' id='endDate'>
									</form>
									<br />
									<button id='getWinner'>Select Winner</button>
									<h1><span id='winnerText'></span>
									<br />
									<span id='winnerName'></span></h1>
                                </center>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- /.row -->
            </div>
            <!-- /.container-fluid -->
        </div>
        <!-- /#page-wrapper -->
    </div>
    <!-- /#wrapper -->
    <!-- jQuery -->
    <script src="js/jquery.js"></script>
    <!-- Bootstrap Core JavaScript -->
    <script src="js/bootstrap.min.js"></script>
	<script>
		$('#getWinner').click(function() {
			var startDate = $('#startDate').val();
			var endDate = $('#endDate').val();
			$.post("http://www.bovinitydivinity.com/raffle", { op: 'getWinner', startDate: startDate, endDate: endDate }, function(data) {
				$('#winnerText').text('And the Winner is...');
				$('#winnerName').text(data.winner);
			});
		});	
	</script>
</body>
